<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Player name</th>
      <th>Race</th>
      <th>Class name</th>
      <th>Class level</th>
      <th>Alignment</th>
      <th>Background</th>
      <th>Experience</th>
      <th>Character level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.player_name %></td>
        <td><%= character.race %></td>
        <td><%= character.class_name %></td>
        <td><%= character.alignment %></td>
        <td><%= character.background %></td>
        <td><%= character.experience %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

